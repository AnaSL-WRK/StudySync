<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/settingsCogIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_cog"
        app:layout_constraintBottom_toBottomOf="@id/StudySyncTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216"
        app:layout_constraintEnd_toEndOf="@id/StudySyncTitle"/>

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        app:layout_constraintBottom_toBottomOf="@id/StudySyncTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216"
        app:layout_constraintStart_toStartOf="@id/StudySyncTitle"
  />

    <TextView
        android:id="@+id/StudySyncTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/dateSelector"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/light_green"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/StudySyncTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- salas -->
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salas"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@id/dateSelector"
        app:layout_constraintEnd_toEndOf="@id/dateSelector"
        app:layout_constraintTop_toTopOf="@id/dateSelector"
        app:layout_constraintBottom_toBottomOf="@id/dateSelector" />


    <ImageView
        android:id="@+id/salas_background"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:background="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateSelector" />


    <Button
        android:id="@+id/salasOP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2.1.1"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_squares"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/salas_background"
        app:layout_constraintEnd_toEndOf="@+id/salas_background"
        app:layout_constraintTop_toBottomOf="@id/dateTextView"/>

    <Button
        android:id="@+id/salasOP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2.1.2"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_squares"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/salas_background"
        app:layout_constraintEnd_toEndOf="@+id/salas_background"
        app:layout_constraintTop_toBottomOf="@id/salasOP1"/>

    <Button
        android:id="@+id/salasOP3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2.1.3"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_squares"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/salas_background"
        app:layout_constraintEnd_toEndOf="@+id/salas_background"
        app:layout_constraintTop_toBottomOf="@id/salasOP2"/>

    <Button
        android:id="@+id/salasOP4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2.1.4"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_squares"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/salas_background"
        app:layout_constraintEnd_toEndOf="@+id/salas_background"
        app:layout_constraintTop_toBottomOf="@id/salasOP3"/>


    <Button
        android:id="@+id/salasOP5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2.1.5"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_squares"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/salas_background"
        app:layout_constraintEnd_toEndOf="@+id/salas_background"
        app:layout_constraintTop_toBottomOf="@id/salasOP4"/>


    <Button
        android:id="@+id/salasOP6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2.1.6"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_squares"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/salas_background"
        app:layout_constraintEnd_toEndOf="@+id/salas_background"
        app:layout_constraintTop_toBottomOf="@id/salasOP5"/>




</androidx.constraintlayout.widget.ConstraintLayout>
