<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Back arrow icon -->
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/back_arrow" />

    <!-- Profile Title - This will be centered horizontally in the RelativeLayout -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seu Perfil"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>



    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_below="@id/title"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/green_circle"
        android:src="@drawable/icon" />


    <LinearLayout
        android:id="@+id/info_container"
        android:layout_below="@id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="8dp"
    >

        <!-- Name Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="16sp"/>

        <!-- Name Field -->
        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:text="Marcelino Figos"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>



        <!-- Phone Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:textSize="16sp"/>

        <!-- Phone Field -->
        <EditText
            android:id="@+id/phone_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:text="912345678"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="8dp"/>



        <!-- Email Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"/>

        <!-- Email Field -->
        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:text="email@ua.pt"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            />
</LinearLayout>




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:padding="16dp"
        android:layout_below="@+id/info_container">

        <!-- Top-left box -->
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/round_squares" />

        <!-- Top-right box -->
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/round_squares" />

        <!-- Bottom-left box -->
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/round_squares" />

        <!-- Bottom-right box -->
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/round_squares"
            />
    </GridLayout>

</RelativeLayout>
